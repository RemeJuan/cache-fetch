{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "extends": [
    "airbnb"
  ],
  "rules": {
    "linebreak-style": [
      "off"
    ],
    "indent": [
      2
    ],
    "import/no-unresolved": [
      2,
      {
        "ignore": [
          "~/*"
        ]
      }
    ],
    "import/extensions": [
      "off"
    ],
    "import/no-extraneous-dependencies": [
      "off"
    ],
    "import/prefer-default-export": [
      "warn"
    ]
  },
  "globals": {
    "__DEV__": true
  }
}
